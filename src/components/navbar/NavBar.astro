---
import { Button, Outlined } from "~/components/button"
import { default as NavBarItem } from "./shared/Item.astro"
---

<nav>
  <a href="/" aria-label="home">
    <img alt="logo" src="/logo_full.svg" />
  </a>

  <ul>
    <NavBarItem
      title="Overview"
      href="/"
    />
    <NavBarItem
      title="Pages"
      href="/"
    />    
    <NavBarItem
      title="Blog"
      href="/"
    />    
    <NavBarItem
      title="Contact"
      href="/"
    />
  </ul>

  <!-- Without passing styles prop we declare default button style -->
  <Button styles={[ Outlined ]}>get started</Button>
</nav>

<style>
  nav {
    display: flex;
    place-items: center;
    justify-content: space-between;
    
    position: relative;
    padding: 0 4.5em;
    height: 6.25em;
  }
  nav::after {
    content: '';
    position: absolute;

    width: 100vw;
    height: 1px;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);

    background-color: hsla(0, 0%, 71.8%, 0.25);
  }
  @supports (translate: -50%) {
    nav::after {
      transform: none;
      translate: -50%;
    }
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;

    display: flex;
    gap: 4px;
  }
</style>
